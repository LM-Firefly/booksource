    "version": 101,
    "search": {
        "url": "https://m.luocs.cn/s.php@post->type=articlename&s=${key}&submit=",
		"charset": "gbk",
        "list": ".cover>.line",
        "name": "a:nth-child(2)",
        "author": "a:nth-child(3)",
        "cover": "",
        "detail": "a:nth-child(2)"
    },
    "detail": {
        "name": "h2>a",
        "author": ".block_txt2>p:nth-child(4)>a",
        "cover": ".block_img2>img",
        "summary": ".intro_info",
        "status": ".block_txt2>p:nth-child(6)",
        "update": ".block_txt2>p:nth-child(7)@replace->更新：->",
        "lastChapter": ".block_txt2>p:nth-child(8)>a",
        "catalog": ".margin_right:nth-child(2)>a@attr->href@replace->m.luocs->www.luocs"
    },
    "catalog": {
        "list": "#chapterlist>li",
        "name": "a",
        "chapter": "a"
    },
    "chapter": {
        "content": "#book_text",
        "purify": [
            "记住本站网址(.*?)就能进入本站"
        ]
    }
